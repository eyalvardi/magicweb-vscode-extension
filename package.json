{
    "name": "magicweb-vscode-extenstion",
    "displayName": "MagicWeb VSCode Extension",
    "description": "test",
    "version": "0.0.1",
    "publisher": "evardi",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:angular.json",
        "onCommand:magic.searchPrograms",
        "onCommand:markdown.showPreview",
        "onView:programsTree",
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id"   : "magic-explorer",
                    "title": "",                   
                    "icon" : "media/magic-logo.svg"
                }
            ]
        },
        "views": {
            "explorer":[
                {
                    "id": "programsTree",
                    "name": "Magic programs tree",
                    "when": "inMagicProject"
                }
            ],
            "magic-explorer": [
                {
                    "id": "programsTree",
                    "name": "Programs"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "magic.refresh",
                    "group": "navigation"
                },                
                {
                    "command": "magic.generateAll",
                    "group": "navigation"
                },
                {
                    "command": "magic.searchProgram",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "markdown.showPreview"
                },
                {
                    "command": "magic.searchProgram",
                    "when"   : "inMagicProject"

                },
                {
                    "command": "magic.generateComponent",
                    "group"  : "magicschematics@1",
                    "when"   : "viewItem == form"
                },
                {
                    "command": "magic.generateControl",
                    "group"  : "magicschematics@1",
                    "when"   : "viewItem == field"
                },
                {
                    "command": "magic.openComponentHtml",
                    "group"  : "magicschematics@1",
                    "when"   : "viewItem == form"
                }
            ],
            "explorer/context": [
                {
                    "command": "magic.generateComponent",
                    "group": "magicschematics@1",
                    "when": "inMagicProject"
                }
            ]
        },
        "commands": [
            {
                "command": "magic.generateAll",
                "title": "Generate All",
                "category": "Magic",
                "icon": {
                    "light": "resources/light/generate.svg",
                    "dark": "resources/dark/generate.svg"
                }
            },
            {
                "command": "magic.searchProgram",
                "title": "Search Magic Program",
                "category": "Magic",
                "icon": {
                    "light": "resources/light/search.svg",
                    "dark": "resources/dark/search.svg"
                }
            },
            {
                "command": "magic.refresh",
                "title": "Refresh Magic tree",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "magic.generateComponent",
                "title": "Generate a component"
            },
            {
                "command": "magic.generateControl",
                "title": "Generate a control into component"
            },
            {
                "command": "magic.openComponentHtml",
                "title": "Open component Html"
            }
        ],
        "snippets": [
            {
                "language": "html",
                "path": "./sinippets/magic.json"
            }
        ]
    },
    "markdown": "github",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/json5": "0.0.30",
        "json5": "^2.1.0"
    }
}
